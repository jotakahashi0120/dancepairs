<!DOCTYPE html>
<html>
  <head>
    <title>Dancepairs</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      <% if flash[:notice] %>
        <%= render 'layouts/flashes' %>
      <% end %>
      
      <% if flash[:alert] %>
        <%= render 'layouts/flashes' %>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
