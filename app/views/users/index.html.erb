<h1 class="text-center">ユーザー一覧</h1>
<div class="text-center" id="search">
  <%= form_tag(users_path, method: "get") do %>
  <%= label_tag :gender, "性別" %>
  <%= select_tag :gender, options_for_select(User.genders), include_blank: true %>
  <%= label_tag :prefecture, "住所" %>
  <%= select_tag :prefecture, options_for_select(User.prefectures), include_blank: true %>
  <%= submit_tag "検索" %>
  <% end %>
</div>
<section class="jumbotron text-center">
  <div class="container">
    <% @users.each do |user| %>
      <div class="card mb-3" style="max-width: 500px;">
        <div class="row no-gutters">
          <div class="col-lg-3">
            <div class="card-img">
              <%= link_to user_path(user) do %>
                <%= attachment_image_tag user, :profile_image, fallback: "no-image.png", size:'100x100' %>
              <% end %>
            </div>
          </div>
          <div class="col-lg-9">
            <div class="card-body">
              <%= link_to user_path(user), class: "linkto" do %>
                <h4 class="card-title"><%= user.username %></h4>
              <% end %>
              <p class="card-text" id="index-detail"><%= user.gender %></p>
              <p class="card-text" id="index-detail"><%= user.prefecture %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>