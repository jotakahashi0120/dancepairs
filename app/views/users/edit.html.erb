<h1 class="text-center">ユーザー編集</h1>
<section class="jumbotron text-center">
  <div class="container">
    <%= form_with model: @user, local: true do |f| %>
      <div class="field">
        <%= f.label :username, "ニックネーム" %><br />
        <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :profile_image, "プロフィール画像" %><br />
        <%= f.attachment_field :profile_image, autocomplete: "profile_image" %>
      </div>
      <div class="field">
        <%= f.label :gender, "性別" %><br />
        <%= f.select :gender, User.genders.keys, {prompt: '選択してください'}, class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :prefecture, "住所" %><br />
        <%= f.select :prefecture, User.prefectures.keys, {prompt: '選択してください'}, class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :profile, "プロフィール" %><br />
        <%= f.text_area :profile, autocomplete: "profile", class: "form-control" %>
      </div>
      <div class="actions">
        <%= f.submit "更新する", class: "btn btn-lg btn-primary btn-block" %>
      </div>
    <% end %>
  </div>
</section>